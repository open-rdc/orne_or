<?xml version="1.0" ?>
<robot name="orne_box" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:include filename="$(find icart_mini_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find orne_box_description)/urdf/orne_box.gazebo.xacro"/>

  <link name="base_link">
    <visual>
      <origin xyz="0.090 0 0.1715" rpy="0 0 0"/>
      <geometry>
        <box size="0.400 0.404 0.202"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <inertial>
      <origin xyz="0.090 0 0.1715" rpy="0 0 0"/>
      <mass value="25.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
  </link>

  <joint name="left_wheel_hinge" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.1525 0.075" rpy="${-PI/2} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.075"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.075"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>

  </link>

  <joint name="right_wheel_hinge" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.1525 0.075" rpy="${-PI/2} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.075"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.030" radius="0.075"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>

  </link>

  <joint name="caster_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_front_link"/>
    <origin xyz="0.362 0 0.050" rpy="0 0 0"/>
  </joint>

  <link name="caster_front_link">
    <visual>
      <origin xyz="0 0.150 0" rpy="${PI/2} 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.050"/>
      </geometry>
      <material name="red"/>
    </visual>
    <visual>
      <origin xyz="0 -0.150 0" rpy="${PI/2} 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.050"/>
      </geometry>
      <material name="red"/>
    </visual>

    <collision>
      <origin xyz="0 0.150 0" rpy="${PI/2} 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.050"/>
      </geometry>
    </collision>
    <collision>
      <origin xyz="0 -0.150 0" rpy="${PI/2} 0 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.050"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>
  </link>

  <!--xacro:include filename="$(find icart_mini_description)/urdf/sensors/imu.urdf.xacro"/-->
  <!-- Setting for imu -->
  <!--
  <xacro:sensor_imu name="imu" parent="base_link" size="0.05 0.05 0.05">
    <origin xyz="0.3 0 0.2445" rpy="0 0 ${-PI/2}"/>
  </xacro:sensor_imu>
  -->

  <xacro:include filename="$(find icart_mini_description)/urdf/sensors/hokuyo.urdf.xacro"/>
  <xacro:sensor_hokuyo name="hokuyo" parent="base_link">
    <origin xyz="0.374295 0 0.2185" rpy="0 0 0"/>
  </xacro:sensor_hokuyo>

  <transmission name="tran1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>   
  <actuator name="left_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="tran2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>  
  <actuator name="right_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

</robot>
